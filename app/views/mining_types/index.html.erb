<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.models.mining_type.other') %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description) %></th>
      <th><%= @mining_types.human_attribute_name(:acronym) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('link.show'), mining_type %></td>
        <td><%= link_to t('link.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('link.delete'), mining_type, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.mining_type'), new_mining_type_path, class:'btn btn-primary' %>