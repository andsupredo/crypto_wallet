<h1><%= t('show.mining_type') %></h1>

<form>
  <fieldset disabled>
    <div class="mb-3">
      <%= label_tag nil, @mining_type.class.human_attribute_name(:description) %>
      <%= text_field_tag nil, @mining_type.description, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= label_tag nil, @mining_type.class.human_attribute_name(:acronym) %>
      <%= text_field_tag nil, @mining_type.acronym, class:"form-control" %>
    </div>
  </fieldset>
</form>

<%= link_to t('link.edit'), edit_mining_type_path(@mining_type), class:"btn btn-primary" %>
<%= link_to t('link.back'), mining_types_path, class:"btn btn-primary" %>
